<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:paddingVertical="32dp"
        tools:context=".view.contents.VerseContentsFragment">

        <EditText
            android:id="@+id/verse_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/verse_title"
            android:inputType="textCapWords|textMultiLine"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/verse_contents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/verse_contents"
            android:inputType="textCapSentences|textMultiLine"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/verse_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>